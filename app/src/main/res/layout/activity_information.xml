<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".informationActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:paddingEnd="5dp"
            android:paddingStart="0dp"
            android:background="#fcba03">

            <TextView
                android:id="@+id/infoNameZh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="寶可夢"
                android:gravity="center"
                android:textSize="35sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="2dp">

                <TextView
                    android:id="@+id/infoNameEn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pokemon"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="right"
                    android:paddingEnd="2dp"/>

                <TextView
                    android:id="@+id/infoNameJp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ポケモン"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingStart="2dp"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/infoDexNational"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="全國#000"
            android:gravity="center"
            android:textSize="28sp"
            android:textStyle="bold"
            android:background="#fa8264"
            android:paddingBottom="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="10dp">

        <TextView
            android:id="@+id/infoDexSinnoh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="神奧 #999"
            android:gravity="center"
            android:textSize="25sp"
            android:textStyle="bold"
            android:background="#fa8264"
            android:paddingTop="5dp"/>

        <TextView
            android:id="@+id/infoDexHisui"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="洗翠 #999"
            android:gravity="center"
            android:textSize="25sp"
            android:textStyle="bold"
            android:background="#fa8264"
            android:paddingTop="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/loadingPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:gravity="center" />

        <ImageView
            android:id="@+id/infoPokePic"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="15dp" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/infoIconI"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="25"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/infoIconII"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="25" />

        <TextView
            android:id="@+id/infoHeight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:text="300m"
            android:textSize="25sp" />


        <TextView
            android:id="@+id/infoWeight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:text="197kg"
            android:textSize="25sp"
            android:gravity="center"/>

    </LinearLayout>


</LinearLayout>