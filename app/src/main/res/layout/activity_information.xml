<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".informationActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:paddingEnd="5dp"
            android:paddingStart="0dp"
            android:background="#fcba03">

            <TextView
                android:id="@+id/infoNameZh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="寶可夢"
                android:gravity="center"
                android:textSize="35sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="2dp">

                <TextView
                    android:id="@+id/infoNameEn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pokemon"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="right"
                    android:paddingEnd="2dp"/>

                <TextView
                    android:id="@+id/infoNameJp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ポケモン"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingStart="2dp"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/infoDexNational"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="全國#000"
            android:gravity="center"
            android:textSize="28sp"
            android:textStyle="bold"
            android:background="#fa8264"
            android:paddingBottom="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="10dp">

        <TextView
            android:id="@+id/infoDexSinnoh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="神奧 #999"
            android:gravity="center"
            android:textSize="25sp"
            android:textStyle="bold"
            android:background="#fa8264"
            android:paddingTop="5dp"/>

        <TextView
            android:id="@+id/infoDexHisui"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="洗翠 #999"
            android:gravity="center"
            android:textSize="25sp"
            android:textStyle="bold"
            android:background="#fa8264"
            android:paddingTop="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="10dp">

        <TextView
            android:id="@+id/infoDexGalar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="伽勒爾 #999"
            android:gravity="center"
            android:textSize="25sp"
            android:textStyle="bold"
            android:background="#fa8264"
            android:paddingTop="5dp"/>

        <TextView
            android:id="@+id/infoDexSV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="朱紫 未釋出"
            android:gravity="center"
            android:textSize="25sp"
            android:textStyle="bold"
            android:background="#fa8264"
            android:paddingTop="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3">

                <ProgressBar
                    android:id="@+id/loadingPanel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:indeterminate="true"
                    android:gravity="center" />

                <ImageView
                    android:id="@+id/infoPokePic"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_margin="15dp" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/infoIconI"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"/>

                    <ImageView
                        android:id="@+id/infoIconII"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="#EFF02B">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/height"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/infoHeight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="300"
                            android:textStyle="bold"
                            android:textSize="25sp"
                            android:gravity="center"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/cm"
                            android:gravity="center"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="#29E6D0">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/weight"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/infoWeight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="197"
                            android:textStyle="bold"
                            android:textSize="25sp"
                            android:gravity="center"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/kg"
                            android:gravity="center"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Weak Against"
            android:textSize="20dp"
            android:gravity="center"/>

        <GridLayout
            android:id="@+id/infoWeekAgainst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resistant Against"
            android:textSize="20dp"
            android:gravity="center"/>

        <GridLayout
            android:id="@+id/infoResistantAgainst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Normal Damage"
            android:textSize="20dp"
            android:gravity="center"/>

        <GridLayout
            android:id="@+id/infoNormalDamage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>